{
  "name": "d365bc-admin-mcp-extension",
  "displayName": "D365 BC Admin MCP Extension",
  "description": "Automatically install and configure the Dynamics 365 Business Central Admin MCP server for GitHub Copilot",
  "icon": "images/SD.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "d365bc-admin-mcp.install",
        "title": "Install D365 BC Admin MCP Server"
      },
      {
        "command": "d365bc-admin-mcp.uninstall",
        "title": "Uninstall D365 BC Admin MCP Server"
      },
      {
        "command": "d365bc-admin-mcp.checkStatus",
        "title": "Check MCP Server Status"
      },
      {
        "command": "d365bc-admin-mcp.showDiagnostics",
        "title": "Show System Diagnostics"
      }
    ],
    "configuration": [
      {
        "title": "D365 BC Admin MCP",
        "properties": {
          "d365bc-admin-mcp.settingsScope": {
            "type": "string",
            "default": "global",
            "enum": [
              "global",
              "workspace"
            ],
            "enumDescriptions": [
              "Apply settings globally for all VS Code instances",
              "Apply settings only to the current workspace"
            ],
            "description": "Choose where to apply the MCP server configuration"
          },
          "d365bc-admin-mcp.autoInstall": {
            "type": "boolean",
            "default": "true",
            "description": "Automatically install the MCP server when the extension is activated"
          }
        }
      },
      {
        "title": "GitHub Copilot",
        "properties": {
          "github.copilot.mcp": {
            "type": "object",
            "default": {},
            "description": "Model Context Protocol (MCP) server configurations for GitHub Copilot"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "eslint": "^8.28.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/demiliani/D365BCAdminMCPExtension"
  },
  "publisher": "demiliani"
}
